<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioGroup
            android:id="@+id/paymentRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <RadioButton
            android:id="@+id/radioButton_PaymentOnDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanh toán khi nhận hàng" />
        <RadioButton
            android:id="@+id/radioButton_Momo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanh toán bằng momo" />
        <RadioButton
            android:id="@+id/radioButton_Banking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanh toán qua tài khoản ngân hàng" />
        </RadioGroup>
        <Button
            android:id="@+id/btnSubmit_PaymentMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:text="Submit"/>
    </LinearLayout>
</RelativeLayout>